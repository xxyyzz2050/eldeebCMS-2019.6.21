{
  "database": {
    "rules": "firebase-database-rules.json"
  },
  "firestore": {
    "rules": "firebase-firestone-rules.txt",
    "indexes": "firebase-firestone-indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build --prod"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "firebase-storage-rules.txt"
  }
}
